<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uni_stuttgart.informatik.sopra.sopraapp.MainActivity">

    <fragment
        android:id="@+id/map_fragment"
        class="de.uni_stuttgart.informatik.sopra.sopraapp.UI.MapFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- background tint workaround -->
    <RelativeLayout
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_background"
        android:layout_gravity="bottom|center">

        <fragment
            android:id="@+id/menu_fragment"
            class="de.uni_stuttgart.informatik.sopra.sopraapp.UI.MenuFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
